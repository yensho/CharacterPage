<html>
  <body>
    <div class="main-area">
      <div class="character-block">
        <h3><%= @character.name %></h3>
        <img src=<%= @character.image %>/>
        <p>Level <%= @character.level %> <%= @character.job %></p>
        <p>Race: <%= @character.race %></p>
        <p>STR: <%= @character.str %></p>
        <p>DEX: <%= @character.dex %></p>
        <p>CON: <%= @character.con %></p>
        <p>INT: <%= @character.int %></p>
        <p>WIS: <%= @character.wis %></p>
        <p>CHA: <%= @character.cha %></p>
        <p>Description: <%= @character.description %></p>
        <p>Spells: <%= @character.spells %></p>
        <%= link_to "Back to index", "/" %><br />
        <%= link_to "Update Character", edit_character_path(@character.id) %><br />
        <%= link_to "Delete Character", "#{@character.id}/confirm" %>
      </div>
    </div>
  </body>
</html>
